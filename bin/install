#!/usr/bin/env bash

set -e

if ! grep -Fq "export RASPILOT_PATH=" ~/.bashrc  ; then
    echo "export RASPILOT_PATH=$(pwd)" >> ~/.bashrc
    source ~/.bashrc
    echo "RASPILOT_PATH set to ${RASPILOT_PATH}"
fi

#echo "Please enter root password in order to copy the binaries to /usr/bin"
#sudo cp ${RASPILOT_PATH}/bin/raspilot-* /usr/bin/

for f in ${RASPILOT_PATH}/bin/raspilot-*
do
    BASE_NAME=$(basename ${f})
    if [ ! -f /usr/local/bin/${BASE_NAME} ]; then
        sudo cp ${f} /usr/local/bin/${BASE_NAME}
    fi
done
